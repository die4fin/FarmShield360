{
  "expo": {
    "name": "FarmShield360",
    "slug": "farmshield360",
    "version": "1.0.0",
    "orientation": "portrait",

    "icon": "./assets/images/farmshield-logo.png",

    "scheme": "fs360",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true
    },

    "android": {
      "package": "com.die4fin.farmshield360",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/farmshield-foreground.png",
        "backgroundColor": "#2f6f1b",
        "monochromeImage": "./assets/images/farmshield-mono.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/farmshield-logo.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-farmshield.png",
          "imageWidth": 220,
          "resizeMode": "contain",
          "backgroundColor": "#2f6f1b"
        }
      ]
    ]
  }
}
